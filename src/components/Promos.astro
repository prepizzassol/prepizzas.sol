  <div class="absolute inset-0 z-[1] bg-[url('/texture-1.webp')] bg-repeat bg-cover opacity-10"></div>
  <div class="pointer-events-none absolute top-0 left-0 right-0 h-16 z-[2] bg-gradient-to-b from-bg to-transparent"></div>
