        <div class="mt-5 flex flex-wrap gap-3">
          <a href={whatsapp} target="_blank" rel="noopener" class="btn">Hacer pedido</a>
          <a href="#contacto" class="btn bg-accent text-white hover:opacity-90">Consultar</a>
        </div>
      </div>
    </div>

    <!-- Imagen (derecha en desktop / segunda en mobile) -->
    <div class="order-2 md:order-none flex justify-center md:justify-end">
      <figure class="relative w-full max-w-xl rounded-2xl overflow-hidden shadow-2xl bg-white">
        <img
          src={img}
          alt="Promoci√≥n vigente"
          class="w-full h-auto object-cover transition-transform duration-500 hover:scale-[1.02]"
